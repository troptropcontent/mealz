
<div class="w-full p-10 bg-white rounded-md my-auto">
    <h1 class="text-xl font-bold mb-4" >Créez un nouvel événement</h1>
    <%= form_with model: event, class: "flex flex-col" do |form| %>
        <div class="mb-4">
            <%= form.label :name, "Nom de l'évenement" %>
            <%= form.text_field :name, class: 'w-full' %>
        </div>
        <div class="mb-4">
            <%= form.label :start_on, "Date de début", class: 'mt-4' %>
            <%= form.date_field :start_on, class: 'w-full' %>
        </div>
        <div class="mb-4">
            <%= form.label :end_on, "Date de fin", class: 'mt-4' %>
            <%= form.date_field :end_on, class: 'w-full' %>
        </div>
        <%= form.submit "C'est parti", class: 'bg-sky-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
    <% end %>
</div>