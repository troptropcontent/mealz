<div data-controller="expandable-card" class="bg-white mb-4 rounded-md p-4">
    <div class="flex justify-between" data-action="click->expandable-card#toggleExpandable">
        <p><%= title %></p>
        <%= inline_svg_tag 'icons/chevron-down.svg', data: {"expandable-card-target": "chevronDown"}%>
        <%= inline_svg_tag 'icons/chevron-up.svg', class: "hidden", data: {"expandable-card-target": "chevronUp"}%>
    </div>
    <div data-expandable-card-target="expandable" class="hidden mt-4">
        <%= block_given? ? yield : content %>
    </div>
</div>