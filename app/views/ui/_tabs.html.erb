<ul id="tabs" class="flex gap-1">
    <% tabs.each do |tab, data| %>
        <% if tab == active %>
          <li class="px-4 py-2 rounded-t-md bg-white"><%= data[:content] %></li>
        <% else %>
          <li class="px-4 py-2 rounded-t-md bg-slate-200 grow text-center"><%= link_to data[:content], data[:path] %></li>
        <% end %>
    <% end %>
</ul>
<div id="content" class="h-full bg-white rounded-b-md p-4">
    <%= yield %>
</div>
